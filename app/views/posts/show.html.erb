<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h3>
  <%= @post.title %>
</h3>

<p>
  <strong>Tags:</strong>
  <%= @post.tags_string %>
</p>

<p>
  <%= @post.body %>
</p>

<div class="comment-part">
  
  <%= render partial: 'comments/form', locals: {publication_id: @post.id, publication_type: 'Post'} %>
  
  <div class="comments">
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <div class="user"><%= comment.user %>:</div>
        <div class="created_at"><%= time_ago_in_words comment.created_at %> ago</div>
        <div class="body"><%= comment.body %></div>
      </div>

    <% end %>
  </div>
</div>
